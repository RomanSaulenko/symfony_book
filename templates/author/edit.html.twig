{% extends 'base.html.twig' %}

{% block title %}
    {% trans %} Edit author {% endtrans %}
{% endblock %}

{% block content %}

    {{ form_start(form) }}

    <div class="row m-3">
        <div class="col-4">
            <div class="form-group row">
                {{ form_label(form.name, 'Fullname', {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}

                <div class="col-sm-10">
                    {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="row offset-2">
                {{ form_errors(form.name) }}
            </div>

            <div class="row">
                <div>
                    {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary', 'label': 'Fullname'}}) }}
                </div>
            </div>
        </div>
    </div>

    {{ form_end(form) }}

{% endblock %}